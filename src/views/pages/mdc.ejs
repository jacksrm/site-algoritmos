<%- contentFor('body') %>
<section id="mdc" class="algoritmo">
  <div id="slide-area" class="slide-area"></div>

  <div id="slider" class="slide-menu slide-off">
  </div>

  <div class="flip-container">
    <button id="btn-menu" class="flipper" ><</button>
  </div>
  <div class="dark-filter">
    <h1>Calcular MDC</h1>
    <div class="container">
      <form action="/app/mdc" method="POST" autocomplete="off">
        <p>Insira dois n√∫meros</p>
        <div class="input-lado-a-lado">
          <input
            autofocus
            class="input-sml"
            type="number"
            name="numero1"
            min="1"
            required
            pattern="^[\d,.]+$"
            placeholder="Ex: 10"
          />
          <input
            class="input-sml"
            type="number"
            name="numero2"
            min="1"
            required
            pattern="^[\d,.]+$"
            placeholder="Ex: 12"
          />
        </div>
        <button type="submit">Calcular</button>
      </form>
      <div class="resultado">
        <% if(resultado) { %>
        <p>MDC: <%= resultado %></p>
        <% } %>
      </div>
    </div>
  </div>
</section>
<script src="http://localhost:3333/js/algorithmPage.js"></script>