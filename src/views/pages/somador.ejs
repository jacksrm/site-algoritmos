<div class="container">
  <h1>Somar um array</h1>
  
  <form action="/app/somador" method="POST" autocomplete="off">
    <p>Insira os números separados por vírgula</p>
    <input
      type="text"
      name="array"
      required
      autofocus
      pattern="^[\d,.]+$"
      placeholder="Ex: 1,2,3,4,5"
    />
    <button type="submit">Somar</button>
  </form>

  <div class="resultado">
    <% if(resultado) { %>
    <p>Soma: <%= resultado %></p>
    <% } %>
  </div>
</div>
